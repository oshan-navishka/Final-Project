<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@../../styles/items.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.phoneshopmanagementsystem.controller.ItemsController">

    <top>
        <VBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="122.0" prefWidth="1530.0" style="-fx-background-color: #1e293b; -fx-padding: 20;">
         <Button fx:id="backbtn" mnemonicParsing="false" onAction="#backButtonAction" prefHeight="20.0" prefWidth="70.0" style="-fx-background-color: null; -fx-background-radius: 50;" text="❮❮❮❮" textFill="WHITE">
            <font>
               <Font name="Lucida Sans Typewriter Bold" size="16.0" />
            </font>
         </Button>
            <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" style="-fx-text-fill: #ffa500; -fx-font-size: 24; -fx-font-weight: bold;" text="Item Management" />
            <Label style="-fx-text-fill: #94a3b8; -fx-font-size: 14;" text="Manage your phones, accessories and parts" />
        </VBox>
    </top>

    <center>
        <VBox style="-fx-background-color: #0f172a; -fx-padding: 30; -fx-spacing: 20;">

            <VBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="362.0" prefWidth="1229.0" spacing="15" style="-fx-background-color: #1e293b; -fx-padding: 25; -fx-background-radius: 10;">

                <Label style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" text="Item Details" />

                <GridPane hgap="20" vgap="15">

                    <Label style="-fx-text-fill: #cbd5e1;" text="Item Code:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="txtItemCode" promptText="I001" style="-fx-background-color: #0f172a; -fx-text-fill: white;                                       -fx-prompt-text-fill: #64748b; -fx-padding: 10;                                       -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" />

                    <Label style="-fx-text-fill: #cbd5e1;" text="Description:" GridPane.columnIndex="2" />
                    <TextField fx:id="txtDescription" promptText="Samsung Galaxy S24 Ultra" style="-fx-background-color: #0f172a; -fx-text-fill: white;                                       -fx-prompt-text-fill: #64748b; -fx-padding: 10;                                       -fx-background-radius: 5;" GridPane.columnIndex="3" GridPane.hgrow="ALWAYS" />

                    <Label style="-fx-text-fill: #cbd5e1;" text="Brand:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="txtBrand" promptText="Samsung" style="-fx-background-color: #0f172a; -fx-text-fill: white;                                       -fx-prompt-text-fill: #64748b; -fx-padding: 10;                                       -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label style="-fx-text-fill: #cbd5e1;" text="Model:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                    <TextField fx:id="txtModel" promptText="S24 Ultra" style="-fx-background-color: #0f172a; -fx-text-fill: white;                                       -fx-prompt-text-fill: #64748b; -fx-padding: 10;                                       -fx-background-radius: 5;" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                    <Label style="-fx-text-fill: #cbd5e1;" text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <ComboBox fx:id="cmbCategory" prefWidth="200" promptText="Select Category" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label style="-fx-text-fill: #cbd5e1;" text="Unit Price:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                    <TextField fx:id="txtUnitPrice" promptText="Rs. 450,000.00" style="-fx-background-color: #0f172a; -fx-text-fill: white;                                       -fx-prompt-text-fill: #64748b; -fx-padding: 10;                                       -fx-background-radius: 5;" GridPane.columnIndex="3" GridPane.rowIndex="2" />

                    <Label style="-fx-text-fill: #cbd5e1;" text="Qty on Hand:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField fx:id="txtQtyOnHand" promptText="10" style="-fx-background-color: #0f172a; -fx-text-fill: white;                                       -fx-prompt-text-fill: #64748b; -fx-padding: 10;                                       -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <Label style="-fx-text-fill: #cbd5e1;" text="Supplier ID:" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                    <TextField fx:id="txtSupplierId" promptText="S001" style="-fx-background-color: #0f172a; -fx-text-fill: white;                                       -fx-prompt-text-fill: #64748b; -fx-padding: 10;                                       -fx-background-radius: 5;" GridPane.columnIndex="3" GridPane.rowIndex="3" />
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>

                </GridPane>

                <HBox alignment="CENTER_LEFT" minHeight="-Infinity" minWidth="-Infinity" prefHeight="90.0" prefWidth="885.0" spacing="15">
                    <Button fx:id="btnSave" onAction="#saveItem" prefHeight="40.0" prefWidth="130.0" styleClass="big-btn" text="Save Item">
                  <HBox.margin>
                     <Insets bottom="35.0" left="35.0" right="35.0" top="35.0" />
                  </HBox.margin></Button>
                    <Button fx:id="btnUpdate" onAction="#updateItem" prefHeight="40.0" prefWidth="130.0" style="-fx-background-color: #3b82f6;" styleClass="big-btn" text="Update">
                  <HBox.margin>
                     <Insets bottom="35.0" left="35.0" right="35.0" top="35.0" />
                  </HBox.margin></Button>
                    <Button fx:id="btnDelete" onAction="#deleteItem" prefHeight="40.0" prefWidth="130.0" style="-fx-background-color: #ef4444;" styleClass="big-btn" text="Delete">
                  <HBox.margin>
                     <Insets bottom="35.0" left="35.0" right="35.0" top="35.0" />
                  </HBox.margin></Button>
                    <Button fx:id="btnClear" onAction="#clearFields" prefHeight="40.0" prefWidth="130.0" style="-fx-background-color: #64748b;" styleClass="big-btn" text="Clear">
                  <HBox.margin>
                     <Insets bottom="35.0" left="35.0" right="35.0" top="35.0" />
                  </HBox.margin>
                  <padding>
                     <Insets top="5.0" />
                  </padding></Button>
                </HBox>

            </VBox>

            <HBox alignment="CENTER_LEFT" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="874.0" spacing="15">
                <Label minHeight="-Infinity" minWidth="-Infinity" prefHeight="18.0" prefWidth="81.0" style="-fx-text-fill: white; -fx-font-size: 14;" text="S e a r c h   :">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
                <TextField fx:id="txtSearch" onAction="#searchItem" prefHeight="38.0" prefWidth="414.0" promptText="Search by code, brand, or model..." style="-fx-background-color: #1e293b; -fx-text-fill: white;                                   -fx-prompt-text-fill: #64748b; -fx-padding: 10;                                   -fx-background-radius: 5; -fx-pref-width: 400;">
               <HBox.margin>
                  <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
               </HBox.margin></TextField>
                <Button fx:id="btnSearch" minHeight="-Infinity" minWidth="-Infinity" onAction="#seachItem" prefHeight="50.0" prefWidth="222.0" style="-fx-background-color: FFA500FF;" styleClass="big-btn" text="Search" />
            <HBox prefHeight="50.0" prefWidth="467.0" />
            <Button fx:id="btnDelete1" onAction="#handleItemPrint" prefHeight="40.0" prefWidth="130.0" style="-fx-background-color: green;" styleClass="big-btn" text="Print All Item" />
            </HBox>

            <TableView fx:id="tblItems" style="-fx-background-color: #1e293b; -fx-background-radius: 10;">
                <columns>
                    <TableColumn fx:id="colItemCode" maxWidth="1.7976931348623157E308" minWidth="185.0" prefWidth="0.0" text="Item Code" />
                    <TableColumn fx:id="colDescription" maxWidth="1.7976931348623157E308" minWidth="185.0" prefWidth="0.0" text="Description" />
                    <TableColumn fx:id="colBrand" maxWidth="1.7976931348623157E308" minWidth="185.0" prefWidth="0.0" text="Brand" />
                    <TableColumn fx:id="colModel" maxWidth="1.7976931348623157E308" minWidth="185.0" prefWidth="0.0" text="Model" />
                    <TableColumn fx:id="colUnitPrice" maxWidth="1.7976931348623157E308" minWidth="185.0" prefWidth="0.0" text="Unit Price" />
                    <TableColumn fx:id="colQty" maxWidth="1.7976931348623157E308" minWidth="185.0" prefWidth="0.0" text="Qty" />
                    <TableColumn fx:id="colSupplierId" maxWidth="1.7976931348623157E308" minWidth="185.0" prefWidth="0.0" text="Supplier ID" />
                    <TableColumn fx:id="colCategory" maxWidth="1.7976931348623157E308" minWidth="169.0" prefWidth="0.0" text="Category" />
                </columns>
            </TableView>

        </VBox>
    </center>

</BorderPane>
