<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="850" prefWidth="1300" stylesheets="@../../styles/items.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.phoneshopmanagementsystem.controller.OrdersController">

    <top>
        <VBox style="-fx-background-color: #1e293b; -fx-padding: 15 30;">
            <Button fx:id="btnBack" mnemonicParsing="false" onAction="#backButtonAction" prefHeight="27.0" prefWidth="53.0" style="-fx-background-color: null;" text="â®â®â®â®" textAlignment="JUSTIFY" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Button>
            <Label style="-fx-text-fill: #ffa500; -fx-font-size: 24px; -fx-font-weight: bold;" text="Orders Management" />
            <Label style="-fx-text-fill: #94a3b8; -fx-font-size: 13px;" text="View, search and manage customer orders" />
        </VBox>
    </top>

    <center>
        <HBox spacing="12" style="-fx-background-color: #0f172a; -fx-padding: 15;">

            <VBox prefWidth="650" spacing="12" style="-fx-min-width: 600px;" HBox.hgrow="ALWAYS">

                <VBox spacing="10" style="-fx-background-color: #1e293b; -fx-padding: 15; -fx-background-radius: 10;">
                    <HBox alignment="CENTER_LEFT" spacing="15">
                        <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Search Orders" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="lblTotalOrders" style="-fx-text-fill: #ffa500; -fx-font-size: 14px; -fx-font-weight: bold;" text="Total: 0 orders" />
                    </HBox>

                    <GridPane hgap="15" vgap="10">
                        <Label style="-fx-text-fill: #cbd5e1; -fx-font-weight: bold; -fx-font-size: 13px;" text="Order ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="txtSearchOrderId" prefHeight="32" promptText="Search by Order ID" style="-fx-background-color: #334155; -fx-text-fill: white; -fx-prompt-text-fill: #64748b; -fx-background-radius: 6px;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
   
                        <Label style="-fx-text-fill: #cbd5e1; -fx-font-weight: bold; -fx-font-size: 13px;" text="Customer:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <ComboBox fx:id="cmbSearchCustomer" prefHeight="32" promptText="All Customers" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   
                        <Label style="-fx-text-fill: #cbd5e1; -fx-font-weight: bold; -fx-font-size: 13px;" text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <ComboBox fx:id="cmbSearchStatus" prefHeight="32" promptText="All Status" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   
                        <HBox spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3">
                            <Button fx:id="btnSearch" onAction="#searchOrders" prefHeight="35" prefWidth="120" style="-fx-background-color: FFA500FF;" styleClass="big-btn" text="Search" HBox.hgrow="ALWAYS" />
                            <Button fx:id="btnRefresh" onAction="#refreshOrders" prefHeight="35" prefWidth="120" style="-fx-background-color: #64748b; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold; -fx-font-size: 13px;" styleClass="big-btn" text="Refresh" HBox.hgrow="ALWAYS" />
                        </HBox>

                        <columnConstraints>
                            <ColumnConstraints hgrow="NEVER" minWidth="100" prefWidth="100" />
                            <ColumnConstraints hgrow="ALWAYS" minWidth="200" />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                        </rowConstraints>
                    </GridPane>
                </VBox>

                <VBox spacing="8" style="-fx-background-color: #1e293b; -fx-padding: 15; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
                    <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="All Orders" />

                    <TableView fx:id="tblOrders" style="-fx-background-color: #334155; -fx-background-radius: 8;" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colOrderId" prefWidth="80" text="Order ID" />
                            <TableColumn fx:id="colOrderDate" prefWidth="100" text="Date" />
                            <TableColumn fx:id="colCustomerId" prefWidth="80" text="Cust ID" />
                            <TableColumn fx:id="colCustomerName" prefWidth="150" text="Customer" />
                            <TableColumn fx:id="colTotalAmount" prefWidth="100" text="Amount" />
                            <TableColumn fx:id="colStatus" prefWidth="100" text="Status" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>

            </VBox>
         <VBox HBox.hgrow="ALWAYS">
            <children>
      
                  <VBox fx:id="vboxOrderDetails" prefHeight="671.0" prefWidth="614.0" spacing="12" style="-fx-min-width: 600px;">
                       <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Selected Order Details" />
         
                       <GridPane hgap="15" vgap="10">
                           <Label style="-fx-text-fill: #cbd5e1; -fx-font-weight: bold; -fx-font-size: 13px;" text="Order ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                           <Label fx:id="lblDetailOrderId" style="-fx-text-fill: #ffa500; -fx-font-weight: bold; -fx-font-size: 13px;" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0" />
         
                           <Label style="-fx-text-fill: #cbd5e1; -fx-font-weight: bold; -fx-font-size: 13px;" text="Date:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                           <Label fx:id="lblDetailOrderDate" style="-fx-text-fill: white; -fx-font-size: 13px;" text="-" GridPane.columnIndex="3" GridPane.rowIndex="0" />
         
                           <Label style="-fx-text-fill: #cbd5e1; -fx-font-weight: bold; -fx-font-size: 13px;" text="Customer:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                           <Label fx:id="lblDetailCustomer" style="-fx-text-fill: white; -fx-font-size: 13px;" text="-" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="1" />
         
                           <Label style="-fx-text-fill: #cbd5e1; -fx-font-weight: bold; -fx-font-size: 13px;" text="Total:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                           <Label fx:id="lblDetailTotalAmount" style="-fx-text-fill: #ffa500; -fx-font-size: 14px; -fx-font-weight: bold;" text="Rs. 0.00" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         
                           <Label style="-fx-text-fill: #cbd5e1; -fx-font-weight: bold; -fx-font-size: 13px;" text="Status:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                           <ComboBox fx:id="cmbDetailStatus" prefHeight="30" prefWidth="120" GridPane.columnIndex="3" GridPane.rowIndex="2" />
         
                           <HBox spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="3">
                               <Button fx:id="btnUpdateStatus" onAction="#updateOrderStatus" prefHeight="35" prefWidth="150" style="-fx-background-color: blue;" styleClass="big-btn" text="Update Status" HBox.hgrow="ALWAYS" />
                               <Button fx:id="btnCancelOrder" onAction="#cancelOrder" prefHeight="35" prefWidth="150" style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold; -fx-font-size: 13px;" styleClass="big-btn" text="Cancel Order" HBox.hgrow="ALWAYS" />
                           </HBox>
         
                           <columnConstraints>
                               <ColumnConstraints hgrow="NEVER" minWidth="100" prefWidth="100" />
                               <ColumnConstraints hgrow="SOMETIMES" minWidth="120" />
                               <ColumnConstraints hgrow="NEVER" minWidth="80" prefWidth="80" />
                               <ColumnConstraints hgrow="SOMETIMES" minWidth="120" />
                           </columnConstraints>
                           <rowConstraints>
                               <RowConstraints />
                               <RowConstraints />
                               <RowConstraints />
                               <RowConstraints />
                           </rowConstraints>
                       </GridPane>
         
                      <VBox spacing="8" style="-fx-background-color: #1e293b; -fx-padding: 15; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
                          <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Order Items" />
         
                          <TableView fx:id="tblOrderItems" style="-fx-background-color: #334155; -fx-background-radius: 8;" VBox.vgrow="ALWAYS">
                              <columns>
                                  <TableColumn fx:id="colItemId" prefWidth="80" text="Item ID" />
                                  <TableColumn fx:id="colItemDescription" prefWidth="200" text="Description" />
                                  <TableColumn fx:id="colItemBrand" prefWidth="100" text="Brand" />
                                  <TableColumn fx:id="colItemQty" prefWidth="60" text="Qty" />
                                  <TableColumn fx:id="colItemUnitPrice" prefWidth="80" text="Price" />
                                  <TableColumn fx:id="colItemSubtotal" prefWidth="90" text="Subtotal" />
                              </columns>
                              <columnResizePolicy>
                                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                              </columnResizePolicy>
                          </TableView>
                      </VBox>
         
                      <VBox fx:id="vboxNoSelection" alignment="CENTER" spacing="10" style="-fx-background-color: #1e293b; -fx-padding: 40; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
                          <Label style="-fx-text-fill: #64748b; -fx-font-size: 48px;" text="ðŸ“‹" />
                          <Label style="-fx-text-fill: #94a3b8; -fx-font-size: 16px; -fx-font-weight: bold;" text="SMART WAY MOBILE" />
                          <Label style="-fx-text-fill: #64748b; -fx-font-size: 13px;" text="|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-|-" />
                      </VBox>
      
                  </VBox>
            </children>
         </VBox>

        </HBox>
    </center>

</BorderPane>
