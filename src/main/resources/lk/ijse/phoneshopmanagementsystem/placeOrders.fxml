<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="850" prefWidth="1300" stylesheets="@../../styles/items.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.phoneshopmanagementsystem.controller.PlaceOrderController">

    <top>
        <VBox style="-fx-background-color: #1e293b; -fx-padding: 15 30;">
         <Button fx:id="btnBack" mnemonicParsing="false" onAction="#backButtonAction" prefHeight="27.0" prefWidth="53.0" style="-fx-background-color: null;" text="❮❮❮❮" textAlignment="JUSTIFY" textFill="WHITE">
            <font>
               <Font name="System Bold" size="13.0" />
            </font>
         </Button>
            <Label style="-fx-text-fill: #ffa500; -fx-font-size: 24px; -fx-font-weight: bold;" text="Place Order" />
            <Label style="-fx-text-fill: #94a3b8; -fx-font-size: 13px;" text="Create new customer orders" />
        </VBox>
    </top>

    <center>
        <VBox spacing="12" style="-fx-background-color: #0f172a; -fx-padding: 15;">

            <VBox spacing="10" style="-fx-background-color: #1e293b; -fx-padding: 15; -fx-background-radius: 10;">
                <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Order Information" />

                <GridPane hgap="20" vgap="10">
                    <Label style="-fx-text-fill: #cbd5e1; -fx-font-weight: bold; -fx-font-size: 13px;" text="Order ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <Label fx:id="lblOrderId" style="-fx-text-fill: #ffa500; -fx-font-weight: bold; -fx-font-size: 13px;" text="Auto Generated" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label style="-fx-text-fill: #cbd5e1; -fx-font-weight: bold; -fx-font-size: 13px;" text="Order Date:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                    <Label fx:id="lblOrderDate" style="-fx-text-fill: white; -fx-font-size: 13px;" text="2025-01-15" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                    <Label style="-fx-text-fill: #cbd5e1; -fx-font-weight: bold; -fx-font-size: 13px;" text="Customer ID:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <ComboBox fx:id="cmbCustomerId" onAction="#customerSelected" prefHeight="32" prefWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label style="-fx-text-fill: #cbd5e1; -fx-font-weight: bold; -fx-font-size: 13px;" text="Customer Name:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                    <TextField fx:id="txtCustomerName" editable="false" prefHeight="32" prefWidth="250" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                    <Label style="-fx-text-fill: #cbd5e1; -fx-font-weight: bold; -fx-font-size: 13px;" text="Order Status:" GridPane.rowIndex="2" />
                    <ComboBox fx:id="cmbOrderStatus" prefHeight="32" prefWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="120" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="150" />
                        <ColumnConstraints hgrow="NEVER" minWidth="120" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="250" />
                    </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>
            </VBox>

            <VBox spacing="10" style="-fx-background-color: #1e293b; -fx-padding: 15; -fx-background-radius: 10;">
                <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Add Items" />

                <GridPane hgap="20" vgap="10">
                    <Label style="-fx-text-fill: #cbd5e1; -fx-font-weight: bold; -fx-font-size: 13px;" text="Item ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <ComboBox fx:id="cmbItemId" onAction="#itemSelected" prefHeight="32" prefWidth="120" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label style="-fx-text-fill: #cbd5e1; -fx-font-weight: bold; -fx-font-size: 13px;" text="Description:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                    <TextField fx:id="txtItemDescription" editable="false" prefHeight="32" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                    <Label style="-fx-text-fill: #cbd5e1; -fx-font-weight: bold; -fx-font-size: 13px;" text="Brand:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="txtItemBrand" editable="false" prefHeight="32" prefWidth="120" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label style="-fx-text-fill: #cbd5e1; -fx-font-weight: bold; -fx-font-size: 13px;" text="Unit Price:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                    <TextField fx:id="txtUnitPrice" editable="false" prefHeight="32" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                    <Label style="-fx-text-fill: #cbd5e1; -fx-font-weight: bold; -fx-font-size: 13px;" text="Qty On Hand:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="txtQtyOnHand" editable="false" prefHeight="32" prefWidth="120" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label style="-fx-text-fill: #cbd5e1; -fx-font-weight: bold; -fx-font-size: 13px;" text="Order Qty:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                    <HBox spacing="10" GridPane.columnIndex="3" GridPane.rowIndex="2">
                        <TextField fx:id="txtOrderQty" prefHeight="32" prefWidth="150" promptText="Enter quantity" style="-fx-background-color: #334155; -fx-text-fill: white; -fx-prompt-text-fill: #64748b; -fx-background-radius: 6px;" />
                        <Button fx:id="btnAddToCart" onAction="#addToCart" prefHeight="35" prefWidth="140" style="-fx-background-color: FFA500FF;" styleClass="big-btn" text="Add to Cart" />
                    </HBox>

                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="100" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="120" />
                        <ColumnConstraints hgrow="NEVER" minWidth="100" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="250" />
                    </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>
            </VBox>

            <VBox spacing="8" style="-fx-background-color: #1e293b; -fx-padding: 15; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Order Items" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button fx:id="btnRemoveItem" onAction="#removeItem" prefHeight="32" prefWidth="140" style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold; -fx-font-size: 13px;" text="Remove Selected" />
                </HBox>

                <TableView fx:id="tblOrderDetails" style="-fx-background-color: #334155; -fx-background-radius: 8;" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colItemId" prefWidth="100" text="Item ID" />
                        <TableColumn fx:id="colDescription" prefWidth="350" text="Description" />
                        <TableColumn fx:id="colQty" prefWidth="100" text="Quantity" />
                        <TableColumn fx:id="colUnitPrice" prefWidth="120" text="Unit Price" />
                        <TableColumn fx:id="colSubtotal" prefWidth="120" text="Subtotal" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>

            <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-background-color: #1e293b; -fx-padding: 15; -fx-background-radius: 10;">
                <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Net Total:" />
                <Label style="-fx-text-fill: #ffa500; -fx-font-size: 18px; -fx-font-weight: bold;" text="Rs. " />
                <Label fx:id="lblNetTotal" style="-fx-text-fill: #ffa500; -fx-font-size: 24px; -fx-font-weight: bold;" text="0.00" />

                <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#handleOrdermPrint" prefHeight="30.0" prefWidth="149.0" style="-fx-background-color: #5F94ED; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold; -fx-font-size: 13px;" text="Print Order Details" />

                <Button onAction="#clearOrder" prefHeight="40" prefWidth="130" style="-fx-background-color: #64748b; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold; -fx-font-size: 13px;" text="Clear Order" />
                <Button fx:id="btnPlaceOrder" onAction="#placeOrder" prefHeight="40" prefWidth="150" style="-fx-background-color: #42B028; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold; -fx-font-size: 14px;" text="Place Order" />
            </HBox>

        </VBox>
    </center>

</BorderPane>
