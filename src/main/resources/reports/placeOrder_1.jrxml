	<query language="SQL"><![CDATA[SELECT 
                od.Order_Detail_ID,
                od.Order_ID,
                od.Item_ID,
                i.Model,
                i.Brand,
                i.Category,
                i.Description,
                od.Quantity,
                od.Unit_price,
